<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left" >

    <ImageView
        android:id="@+id/imageView_poster"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:maxWidth="300dp"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        
        
        android:src="@drawable/ic_launcher" />

 <TextView
     android:id="@+id/textView_posterTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignTop="@+id/imageView_poster"
     android:layout_marginLeft="150dp"
     android:text="title"
     android:textColor="#000000"
     android:textSize="25sp" />
    
    <TextView
        android:id="@+id/textView_posterDescription"
        android:layout_width="wrap_content"
         android:textSize="13sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_poster"
        android:layout_alignLeft="@+id/textView_posterTitle"
        android:text="description" />

   

</RelativeLayout>
