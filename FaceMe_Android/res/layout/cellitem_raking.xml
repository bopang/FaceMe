<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="#dddddd" >

    <ImageView
        android:id="@+id/imageView_ranking_userPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/label_ranking_position"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/imageView_poster"
        android:layout_alignParentRight="true"
        android:background="#ff0000"
        android:gravity="center"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/label_ranking_scoreNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_ranking_position"
        android:layout_alignBottom="@+id/label_ranking_position"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/label_ranking_position"
        android:text="10000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/label_ranking_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_ranking_scoreNum"
        android:layout_alignBottom="@+id/label_ranking_scoreNum"
        android:layout_toRightOf="@+id/imageView_ranking_userPhoto"
        android:text="Score:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/label_ranking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label_ranking_score"
        android:layout_alignParentTop="true"
        android:text="Ziyi"
        android:textSize="25sp" />

</RelativeLayout>
